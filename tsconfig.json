{
    "include": [
        "./src/**/*",
        "./public/**/*",
        "./src/vite-env.d.ts",
        "./src/**/*.js",
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx",
        "types": ["vite-plugin-glsl/ext"],
        "outDir": "./dist",
        "allowJs": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "module": "esnext",
    }
}